@model PlanillaHorarios.Models.Persona

@{
    ViewBag.Title = "Detalle";
}

<h2>Detalle</h2>

<div>
    <h4>Persona</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

    </dl>
</div>


<div>

    <table class="table">
        <tr>
            <th>
                Año
            </th>
            <th>
                Mes
            </th>
            <th></th>
        </tr>


        @foreach (PlanillaHorarios.ViewModels.PlanillaResumen item in ViewData["PHorarios"] as IEnumerable<PlanillaHorarios.ViewModels.PlanillaResumen>)
        {
            <tr>
                <td>
                    @item.Anio
                </td>
                <td>
                    @item.Mes
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new PlanillaHorarios.ViewModels.PlanillaResumen { PersonaId = item.PersonaId, Anio = item.Anio, Mes = item.Mes }) |
                    @Html.ActionLink("Imprimir", "ImprimirPlanilla", new PlanillaHorarios.ViewModels.PlanillaResumen { PersonaId = item.PersonaId, Anio = item.Anio, Mes = item.Mes })
                </td>
            </tr>
        }
        </table>
</div>
